<div style="text-align: left;">
<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @task.title %>
</p>

<p>
  <strong>Due date:</strong>
  <%= @task.due_date %>
</p>

<p>
  <strong>Status:</strong>
  <%= @task.status&.humanize&.capitalize %>
</p>

<p>
  <strong>Notes:</strong>
  <%= @task.notes %>
</p>

<%= link_to 'Edit', edit_task_path(@task), class: 'link' %> |
<%= link_to 'Back', tasks_path, class: 'link' %>

</div>
